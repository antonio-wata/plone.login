<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>
    <metal:body fill-slot="body">
        <div id="content">
            <h1 class="documentFirstHeading"
                tal:content="string:Confirmation Sent" />
            <div id="content-core">
              <form>
                <input type="text"
                  name="username"
                  size="20"
                  tal:attributes="value request/username | string:username" />
                <input type="text"
                  name="email"
                  size="20"
                  tal:attributes="value request/email | string:email" />
                <input type="text"
                  name="password"
                  size="20"
                  tal:attributes="value request/password | string:password" />
                <input type="text"
                  name="confirm"
                  size="20"
                  tal:attributes="value request/confirm | string:confirm password" />
                <input type="submit" value="Fuck Yeah!">
              </form>
            </div>
        </div>
    </metal:body>
</body>
</html>
